{
  "compilerOptions": {
    "strict": false,
    "target": "esnext",
    "module": "Nodenext",
    "moduleResolution": "nodenext",  // Ensures Vite modules are resolved correctly
    "jsx": "react-jsx",  // For React 17+ JSX Transform
    "esModuleInterop": true,  // Allows importing CommonJS modules
    "skipLibCheck": true,  // Skip type checking for declaration files
    "types": ["vite/client", "vitest/globals"],
    "lib": ["dom", "esnext"],
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
